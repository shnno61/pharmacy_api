{
  "name": "pharmacy_api_project",
  "version": "1.0.0",
  "description": "It's an api that take a medicine name and search on the database to see if it is available in the stock or not",
  "main": "server.js",
  "author": "Ahmed EL_Shnnawy",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": " tsc && node dist/server.js",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "tsc": "tsc",
    "dev": " nodemon src/server.ts",
    "test": "set NODE_ENV=test && tsc && db-migrate up --env test && tsc&& jasmine && db-migrate reset --env reset ",
    "format": "prettier --write src/**/**/*.ts",
    "lint": "eslint src/**/**/*.ts --fix",
    "db-up": "db-migrate up   "
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.1",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4"
  }
}
